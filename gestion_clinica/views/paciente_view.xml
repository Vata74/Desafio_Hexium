<odoo>
        <!-- Vista para el formulario de Paciente -->
        <record id="view_paciente_form" model="ir.ui.view">
            <field name="name">Paciente Form</field>
            <field name="model">clinica.paciente</field>
            <field name="arch" type="xml">
                <form string="Paciente">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="apellido"/>
                            <field name="tipo_documento"/>
                            <field name="numero_documento"/>
                            <field name="fecha_nacimiento"/>
                            <field name="genero"/>
                            <field name="direccion"/>
                            <field name="ciudad"/>
                            <field name="codigo_postal"/>
                            <field name="telefono"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista para la lista de Pacientes -->
        <record id="view_paciente_tree" model="ir.ui.view">
            <field name="name">Paciente Tree</field>
            <field name="model">clinica.paciente</field>
            <field name="arch" type="xml">
                <tree string="Pacientes">
                    <field name="name"/>
                    <field name="apellido"/>
                    <field name="telefono"/>
                </tree>
            </field>
        </record>
</odoo>
